doctype strict
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge; charset=utf-8")
		title= appTitle
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		script(type="text/javascript", src="/scripts/jquery.min.js")

		style(type="text/css")
			include ../../public/stylesheets/styleword.css
	body
		
		div.Section1
			div.centerallwrap(style="background-color: #fff; background-color: var(--primary); pointer-events:all;")
				

				div.centerall
					- var menu = "word"
					include menu.pug
					a.tb-06-m0.block.success(role="button", href= hrf, title="Download Word File", style="color:#fff;") Click here to download Word File
					div.tb-01-m0 &nbsp
					a.tb-03-m0.block.danger(role="button", href="/exportword", title="Page blank -- reload")
						span Blank page? Click to reload

					p.tb-font-l(class="MsoHeader") Brigham City
					each data, n in dat
						if (n === 0)
							div#chapter
								table(cellspacing="0px", style="width:100%;table-layout: auto;")
									tr.tb-font-xxl(style="padding: 0;")
										td 
											
											span Title 
											span.bd #{data[0].title.ind}
											span &nbsp
											span #{data[0].title.str}

					p.tb-font-xl Table of Contents
					<!--[if supportFields]>
					span(style='mso-element:field-begin')
					| TOC \o "1-2" \h \z \t
					span(style='mso-element:field-separator')
					span.tb-font-xl(style='mso-no-proof:yes; font-size: 20px; color: red;') Table of contents - Please right-click here and then choose "Update Field" to initialize this field.
					span(style='mso-element:field-end')

					<![endif]-->
					p.tb-11-m0.footrule &nbsp
					table(cellspacing="0px", style="width: 100%;table-layout: fixed;overflow:hidden;")
						tr#chapter
							td(style="padding: 0;width:100%;", colspan="1") &nbsp
							td(style="padding: 0;width:100%;", colspan="1") &nbsp
						- var c = 0
						each data, n in dat.length ? dat : []
							
							
							tr#chapter.tb-font-l
								
								td(style="padding: 0;", colspan="2")
									div(style="clear:both!important;")
									h1(style="page-break-before:always;display:block;")
										span Chapter 
										span.bd #{data[0].chapter.ind}
										span &nbsp
										span #{data[0].chapter.str}
									div(style="clear:both!important;")
							- var count = 0
							each doc, i in data.length ? data : []
								tr.tb-font-l
									td.headrule(colspan="2", style="overflow:hidden;")
										if (doc.section.ind !== "000")
											h2
												span.bd #{doc.title.ind}
													span .
													span #{doc.chapter.ind}
													span .
													span #{doc.section.ind}
												span &nbsp
													span #{doc.section.str}
										
										each img, j in doc.properties.media
											if (img.orientation === 'landscape')
												//div.row
												span.img.tb-10-m0
													img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ))
												if (doc.section.ind !== "000")
													p.tb-11-m0.tb-font-xxs(style="position: relative;") #{img.caption}
										
										if (doc.properties.description)
											p.tb-font-xs
												!= md(doc.properties.description)
											each img, j in doc.properties.media
												if (img.orientation !== 'landscape')
													p.img.tb-05-m0
														img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ))
													if (doc.section.ind !== "000")
														p.tb-11-m0.tb-font-xxs(style="position: relative;") #{img.caption}

								tr.tb-font-xxs(style="margin:0;padding:0;")
									td(style="padding: 0;margin:0;width:100%;", colspan="1") &nbsp
									td(style="padding: 0;margin:0;width:100%;", colspan="1") &nbsp
								- count++
							- c++
							tr
								td.footrule(colspan="2", style="width: 100%;")
									p.tb-11-m0.footrule &nbsp
			div#f1(style="mso-element:footer")
				p.MsoFooter
					table(width="100%", border="0", cellspacing="0", cellpadding="0")
						tr.tb-font-xxs
							td(width="80%")
								span.tb-font-xxs(style="color:#999;") Subdivisions
							td(align="right", width="20%")
								
								span(class="MsoPageNumber")
									
									span(style='mso-field-code: " PAGE " ')
				


		script(type="text/javascript").
			
			$('.drop').slideToggle(100);
			$('.slidedown').slideToggle(100);
			$('.mainmenu').on('click', function(){
				if ($('.dropdown').hasClass('active')) {
					$('.dropdown').removeClass('active');
				} else {
					$('.dropdown').addClass('active');
				}
				$('.drop').slideToggle(100);
			});
			$('.submenu.drop').on('click', function(){
				if (!$(this).next('.slidedown')) {
					
					return;
				} else {
					
					$('.submenu.drop').not($(this)).removeClass('active');
					$(this).next('.slidedown').slideToggle(100);
					$(this).toggleClass('active');
					if (!$('.submenu.drop').not($(this)).next('.slidedown a').attr('href')) {
						$('.submenu.drop').not($(this)).next('.slidedown').slideUp(100);
					} else {
						
						$(this).parent('.slidedown').slideUp(100);
						if (!$(this).attr('href')) {
							$(this).children('.ui').children('i').toggleClass('fa-angle-right');
							$(this).children('.ui').children('i').toggleClass('fa-angle-down');
						} else {
							$('.dropdown').not($('.static')).slideUp(100);
						}
						//
					}
				}
			});

