doctype strict
html(xmlns:v="urn:schemas-microsoft-com:vml", xmlns:o='urn:schemas-microsoft-com:office:office', xmlns:w='urn:schemas-microsoft-com:office:word')
	head
		meta(charset="utf-8")
		meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
		link(rel="File-List", href="exportword/filelist.xml")
		title #{appTitle}
		//
			&nbsp
		style(type="text/css")
			include ../../public/stylesheets/styleword.css

		
	body
		
		div.Section1.WordSection1
			
			table(cellspacing="0px", width="100%", style="width: 100%;table-layout: fixed;overflow:hidden;")
				tr
					td
						- var ct = 0
						each data, n in dat.length ? dat : []
							- var cnt = 0
							- var cntt = 0
							each doc, i in data.length ? data : []
								if (n === 0)
									if (doc.section.ind === "000")
										- cnt++
										if (cnt === 1)
											if (i === 0)
												each img, j in doc.properties.media
												
													if (j === 0)
														span.img.tb-10-m0(style="position:relative;display:inline-block;")
															img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ), style="width:100%;")
									
									if (i === data.length - 1)
										
										div(style="padding:100px;background-color:rgba(250,251,237,0.9);position:absolute;display:block;margin:0 0 20px 0;page-break-after:always;top: 50%;left: 50%;transform: translate(-50%, -50%);z-index:2;")
											p.tb-font-xxxl(style="text-transform:uppercase;letter-spacing:5px;text-align:center;") Brigham City
											p.tb-font-l(style="text-transform:uppercase;letter-spacing:2px;text-align:center;") Title 
												span.bd #{data[data.length-1].title.ind} 
												span #{data[data.length-1].title.str}
									
									if (doc.properties.diffs.length > 0)
										- ct++
										if (ct === 1)
										
											p.tb-font-xxs(style="text-align:center;margin-bottom:20px;padding-bottom:20px;") Revised 
												span #{moment(doc.properties.diffs[doc.properties.diffs.length-1].date).format('YYYY-MM-DD')}
								else
									
									if (n < 4)
										if (doc.section.ind === "000")
											- cntt++
											if (cntt === 1)
												if (i === 0)
													
													each img, j in doc.properties.media
													
														if (j === 0)
															span.img.tb-10-m0(style="position:relative;display:inline-block;")
																img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ), style="width:100%;")
						

		
				

						
			div.centerallwrap(style="visibility:visible;background-color: #fff; background-color: var(--primary); pointer-events:all;")
				
				div.centerall
					
					each data, n in dat
						if (n === 0)
							div#chapter
								table(cellspacing="0px", style="width:100%;table-layout: auto;")
									tr.tb-font-xxl(style="padding: 0;")
										td 
											div(style="clear:both!important;")
											p.tb-font-xxl(style="page-break-before:always;display:block;") Title 
												span.bd #{data[0].title.ind}
												span &nbsp
												span #{data[0].title.str}
											div(style="clear:both!important;")
					p.tb-font-xl Table of Contents
					<!--[if supportFields]>
					span(style='mso-element:field-begin')
					| TOC \o "1-2" \h \z \t
					span(style='mso-element:field-separator')
					span.tb-font-xl(style='mso-no-proof:yes; font-size: 20px; color: red;') Table of contents - Please right-click here and then choose "Update Field" to initialize this field.
					span(style='mso-element:field-end')

					<![endif]-->
					p.tb-11-m0.footrule &nbsp
						
					table(cellspacing="0px", style="width: 100%;table-layout: fixed;overflow:hidden;")
						tr#chapter
							td(style="padding: 0;width:100%;", colspan="1")
							td(style="padding: 0;width:100%;", colspan="1")
						- var c = 0
						each data, n in dat.length ? dat : []
							
							
							tr#chapter.tb-font-l
								
								td(style="padding: 0;", colspan="2")
									div(style="clear:both!important;")
									h1(style="page-break-before:always;display:block;")
										span Chapter 
										span.bd #{data[0].chapter.ind}
										span &nbsp
										span #{data[0].chapter.str}
									div(style="clear:both!important;")
							- var count = 0
							each doc, i in data.length ? data : []
								tr.tb-font-l
									td.headrule(colspan="2", style="overflow:hidden;")
										if (doc.section.ind !== "000")
											h2
												span.bd #{doc.title.ind}
													span .
													span #{doc.chapter.ind}
													span .
													span #{doc.section.ind}
												span &nbsp
													span #{doc.section.str}
										
										each img, j in doc.properties.media
											if (img.orientation === 'landscape')
												//div.row
												span.img.tb-10-m0
													img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ))
												if (doc.section.ind !== "000")
													p.tb-11-m0.tb-font-xxs(style="position: relative;") #{img.caption}
										
										if (doc.properties.description)
											p.tb-font-xs(style="page-break-before:avoid;")
												
												!= md(doc.properties.description.replace(/href="\/menu\/(\d{1,4})\/(\d{2,4})#(\d{2,5})(&rdquo;|"| )/g, 'href="#$1.$2.$3"').replace(/href="\/menu\/(\d{1,4})\/(\d{2,4})(&rdquo;|"| )/g, 'href="#Chapter_$2"'))
											each img, j in doc.properties.media
												if (img.orientation !== 'landscape')
													p.img.tb-05-m0(style="margin-top:10px;")
														img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ))
													if (doc.section.ind !== "000")
														p.tb-11-m0.tb-font-xxs(style="position: relative;") #{img.caption}
								
								tr
									td(style="padding: 0 0 0 0;margin:0 0 0 0;width:100%;", colspan="1")
										p(style="padding: 0 0 0 0;margin:0 0 0 0;") &nbsp
									td(style="padding: 0 0 0 0;margin:0 0 0 0;width:100%;", colspan="1")
										p(style="padding: 0 0 0 0;margin:0 0 0 0;") &nbsp
								- count++
							- c++
							tr
								td.footrule(colspan="2", style="width: 100%;")
									p.tb-11-m0.footrule &nbsp

			div#f1(style="mso-element:footer;")
				p.MsoFooter
					table(width="100%", border="0", cellspacing="0", cellpadding="0")
						tr.tb-font-xxs
							td(width="100%")
								
								div(style='mso-element:footnote-list')
									
									each data, n in dat
										each doc, i in data
											each foot, k in doc.properties.footnotes
												
												div(style='mso-element:footnote', id='ftn'+k+'')
													a(style='mso-footnote-id:ftn'+k+'', href='#_ftn'+k+'', name='_ftnref'+k+'', title='', id='_ftnref'+k+'')
														span(class='MsoFootnoteReference')
												span &nbsp
												span.tb-font-xxs(style='mso-special-character:footnote') #{foot}

						tr.tb-font-xxs
							td(width="80%")
								span.tb-font-xxs(style="color:#999;") Brigham City 
								span.tb-font-xxs(style="color:#999;") | 
								span.tb-font-xxs(style="color:#555;") Subdivisions
							td(align="right", width="20%")
								
								span(class="MsoPageNumber")
									
									span.tb-font-xs(style='mso-field-code: " PAGE " ')
			