doctype strict
html(xmlns:v="urn:schemas-microsoft-com:vml", xmlns:o='urn:schemas-microsoft-com:office:office', xmlns:w='urn:schemas-microsoft-com:office:word')
	head
		meta(charset="utf-8")
		meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
		link(rel="File-List", href="exportword/filelist.xml")
		title #{appTitle}
		//
			&nbsp
		style(type="text/css")
			include ../../public/stylesheets/styleword.css

		
	body
		
		div.Section1.WordSection1(style="visibility:hidden;")
			
			div.centerallwrap(style="visibility:visible;background-color: #fff; background-color: var(--primary); pointer-events:all;")
				

				div.centerall
					div(id="h1", style="mso-element:header;")
						p.tb-font-l(class="MsoHeader") Brigham City
						each data, n in dat
							if (n === 0)
								div#chapter
									table(cellspacing="0px", style="width:100%;table-layout: auto;")
										tr.tb-font-xxl(style="padding: 0;")
											td 
												
												span Title 
												span.bd #{data[0].title.ind}
												span &nbsp
												span #{data[0].title.str}

					p.tb-font-xl Table of Contents
					<!--[if supportFields]>
					span(style='mso-element:field-begin')
					| TOC \o "1-2" \h \z \t
					span(style='mso-element:field-separator')
					span.tb-font-xl(style='mso-no-proof:yes; font-size: 20px; color: red;') Table of contents - Please right-click here and then choose "Update Field" to initialize this field.
					span(style='mso-element:field-end')

					<![endif]-->
					p.tb-11-m0.footrule &nbsp
						
					table(cellspacing="0px", style="width:100%;table-layout: fixed;")
						tr#chapter
							td(style="padding: 0;width:100%;", colspan="1") &nbsp
							td(style="padding: 0;width:100%;", colspan="1") &nbsp
						- var c = 0
						each data, n in dat.length ? dat : []
							
							
							tr#chapter.tb-font-l
								
								td(style="padding: 0;width:100%;", colspan="2")
									div(style="clear:both!important;")
									h1(style="page-break-before:always;display:block;")
										span Chapter 
										span.bd #{data[0].chapter.ind}
										span &nbsp
										span #{data[0].chapter.str}
									div(style="clear:both!important;")
							- var count = 0
							each doc, i in data.length ? data : []
								tr.tb-font-l
									td.headrule(colspan="2", style="width: 100%;")
										if (doc.section.ind !== "000")
											h2
												span.bd #{doc.title.ind}
													span .
													span #{doc.chapter.ind}
													span .
													span #{doc.section.ind}
												span &nbsp
													span #{doc.section.str}
										
										each img, j in doc.properties.media
											if (img.orientation === 'landscape')
												//div.row
												p.img(style="width:500px; height:auto;position:relative;display:inline-block;")
													img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ), width="500", style="display:block;")
													if (doc.section.ind !== "000")
														span.tb-11-m0.tb-font-xxs(style="position: relative;") #{img.caption}
										
										if (doc.properties.description)
											!= md(doc.properties.description)
											each img, j in doc.properties.media
												if (img.orientation !== 'landscape')
													p.img.tb-05-m0
														img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ), width="200", height="auto", style="width:200px;height:auto; display:block;")
														if (doc.section.ind !== "000")
															span.tb-11-m0.tb-font-xxs(style="position: relative;") #{img.caption}

								tr.tb-font-xxs(style="margin:0;padding:0;")
									td(style="padding: 0;margin:0;width:100%;", colspan="1") &nbsp
									td(style="padding: 0;margin:0;width:100%;", colspan="1") &nbsp
								- count++
							- c++
							tr
								td.footrule(colspan="2", style="width: 100%;")
									p.tb-11-m0.footrule &nbsp
			div#f1(style="mso-element:footer;visibility:visible;")
				p.MsoFooter
					table(width="100%", border="0", cellspacing="0", cellpadding="0")
						tr.tb-font-xxs
							td(width="80%")
								span.tb-font-xxs(style="color:#999;") Subdivisions
							td(align="right", width="20%")
								
								span(class="MsoPageNumber")
									
									span.tb-font-xs(style='mso-field-code: " PAGE " ')
			