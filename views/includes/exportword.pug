doctype strict
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge; charset=utf-8")
		title= appTitle
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		style(type="text/css")
			include ../../public/stylesheets/styleword.css
	body

		style(type="text/css")
			include ../../public/stylesheets/styleword.css

		div.centerallwrap(style="background-color: #fff; pointer-events:all;")
			
			div.centerall
				p.tb-font-xl Table of Contents
				<!--[if supportFields]>
				span(style='mso-element:field-begin')
				span(style='mso-spacerun:yes')
				| TOC \o "1-2" \h \z \t
				span(style='mso-element:field-separator')
				span.tb-font-xl(style='mso-no-proof:yes; font-size: 20px; color: red;') Table of contents - Please right-click here and then choose "Update Field" to initialize this field.
				span(style='mso-element:field-end')
				<![endif]-->
				p.tb-11-m0.footrule &nbsp
				each data, n in dat
					div#chapter
						table(cellspacing="0px", style="width:100%;table-layout: auto;")
							tr.tb-font-l(style="padding: 0;")
								td 
									
									span Title 
									span.bd #{data[0].title.ind}
									span &nbsp
									span #{data[0].title.str}

							tr.tb-font-l(style="padding: 0;")
								td
									h1
										span Chapter 
										span.bd #{data[0].chapter.ind}
										span &nbsp
										span #{data[0].chapter.str}


						each doc, i in data
							div(style="margin-top: 15px;")
								table(cellspacing="0px", style="width:100%")
									tr
										td.tb-font-l.headrule(colspan=(doc.properties.media.length > 0 ? 1 : 3), style="vertical-align: top;")
											h2
												span.bd #{doc.title.ind}
													span .
													span #{doc.chapter.ind}
													span .
													span #{doc.section.ind}
												span &nbsp
													span #{doc.section.str}
											span.tb-font-xs
												if (doc.properties.description)
													!= md(doc.properties.description)
											
									
										//
											td.tb-font-s(colspan=(doc.properties.media.length > 0 ? 1 : 3), style="vertical-align:top;" )
												!= md(doc.properties.description)
										if (doc.properties.media.length > 0)
											td.headrule(colspan="2")
											
												each img, j in doc.properties.media
													a.img.tb-11-m0
														img(src= img.image, alt= (img.caption !== 'Sample caption' ? img.caption : '' ))
													p.tb-font-xxs(style="position: absolute;") #{img.caption}
					br
					p.tb-11-m0.footrule &nbsp
