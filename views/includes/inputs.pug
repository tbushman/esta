div#inputs(v-if="(loggedin && loggedin !== '' && pu && pu !== '' && pu.properties.admin && type !== 'draw')")
	button.mapActive(v-if="!mapActive", v-on:click="activateMap()", :disabled="!mapReady")
		span Edit Map
	
	button.success.mapActive(v-else-if="mapActive", class= mn, v-on:click="addMapBlob()", :disabled="!mapReady")
		span(v-text="'Save Map Snapshot'")

	button.mapActive(v-if="mapActive", class= mn, v-on:click="deactivateMap()", :disabled="!mapReady")
		span(v-text="'Done'")
div#inputs(v-else-if="(loggedin && loggedin !== '' && type !== 'draw')")
	button.success.mapActive(@click="initSig", title="Sign", v-if="(signable && doc && pu && pu.username === loggedin && unsigned && ts.length === 0 && doc.properties.title.str !== 'Geography' && doc.properties.title.str !== 'Environmental Impact Statement')")
		span(v-text="(type === 'draw' ? 'Done signing' : 'Sign to indicate support')")
	button.success.mapActive(v-if="(signable && doc && pu && pu.username === loggedin && unsigned && ts.length > 0)", href="#", title="Save", id="save", aria-labelledby="continue", 
		@click="saveSignature()")
		span(v-text="'Save signature'")
	button.mapActive(v-if="!mapActive", v-on:click="activateMap()", :disabled="!mapReady")
		span Make Map clickable
	button.danger.mapActive(v-if="mapActive", class= mn, v-on:click="deactivateMap()", :disabled="!mapReady")
		span(v-text="'Cancel'")

div#inputs(v-else-if="(loggedin && loggedin !== '' && type === 'draw')")
	button.success.mapActive(@click="initSig", title="Sign", v-if="(signable && doc && pu && pu.username === loggedin && unsigned && ts.length === 0 && doc.properties.title.str !== 'Geography' && doc.properties.title.str !== 'Environmental Impact Statement')")
		span(v-text="(type === 'draw' ? 'Done signing' : 'Sign to indicate support')")
	button.success.mapActive(v-if="(signable && doc && pu && pu.username === loggedin && unsigned && ts.length > 0)", href="#", title="Save", id="save", aria-labelledby="continue", 
		@click="saveSignature()")
		span(v-text="'Save signature'")
	button.danger.mapActive(class= mn, v-on:click="deactivateMap()")
		span(v-text="'Cancel'")

div#inputs(v-else-if="((!loggedin || loggedin === '' || !pu || !pu.properties.admin) && type !== 'draw')")
	button.success.mapActive(@click="initSig", title="Sign", v-if="(signable && doc && pu && pu.username === loggedin && unsigned && ts.length === 0 && doc.properties.title.str !== 'Geography' && doc.properties.title.str !== 'Environmental Impact Statement')")
		span(v-text="(type === 'draw' ? 'Done signing' : 'Sign to indicate support')")
	button.success.mapActive(v-if="(signable && doc && pu && pu.username === loggedin && unsigned && ts.length > 0)", href="#", title="Save", id="save", aria-labelledby="continue", 
		@click="saveSignature()")
		span(v-text="'Save signature'")
	button.mapActive(v-if="!mapActive", v-on:click="activateMap()", :disabled="!mapReady")
		span Make Map clickable
	button.danger.mapActive(v-if="(mapActive)", class= mn, v-on:click="deactivateMap()", :disabled="!mapReady")
		span(v-text="'Cancel'")
	

div#inputs(v-else)
	button.danger.mapActive(v-if="(mapActive && (!loggedin || loggedin === ''))", class= mn, v-on:click="deactivateMap()")
		span(v-text="'Cancel'")
