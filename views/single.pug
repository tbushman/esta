extends layout
block page
	- var menu = 'map'
block content

	div#vue
		include includes/menu.pug
		
		div.centerallwrap(:style="{'pointer-events':(mapActive? 'none' : 'auto')}")
			svg(version="1.1", xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink", x="0px", y="0px"
				,
				v-bind:viewBox="'0 0 ' + wWidth +' '+ (wHeight)", v-bind:style="{'enable-background':'new 0 0 ' + wWidth + ' ' + (wHeight) +'', 'display': 'block', 'margin': '0 auto'}", xml:space="preserve"
				, 
				v-bind:width="wWidth +'px'",
				v-bind:height="(wHeight)+'px'",
				style="position:absolute;top:0;pointer-events:fill;"
				)
				//
					defs
						clipPath#myPath(fill="none", clipPathUnits="objectBoundingBox")
							path#path(v-bind:d="dPath", fill="none")
						use(clip-path="url(#myPath)", xlink:href="#path")
				path(style="pointer-events: all; overflow-y: scroll;", v-bind:d="'M0,0v'+(wHeight)+'h'+wWidth+'V0H0L0,0z'", fill="var(--primary)")

			!= str
