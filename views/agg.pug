extends layout
block page
block content
	
	div#vue
		include includes/menu.pug
		div.centerallwrap(style="pointer-events:auto;")
			div.maintitle.centerall
				div.slidercontainer(style="position:relative;height:auto;width:100%;")
					img#slider(style="width:100%;height:auto; transition-property: opacity; transition-duration:2s;margin-top:20px;position:absolute;z-index:1", :style="{opacity: sliderOpacity}", v-bind:src="'/images/slide_'+sliderIndex+'.jpg'")
					img(style="width:100%;height:auto;margin-top:20px;position:relative;z-index:0;", v-bind:src="'/images/slide_1.jpg'")
				
				div.chapter
					div.table(aid:table="table", aid:trows="2" aid:tcols="2", aid5:tablestyle="entry")
						div.cell(aid:table="cell", aid:crows="1", aid:ccols="1", aid:cellstyle="head")
							
							div.header.row.tb-font-l
								span(v-text="'Table of Contents'", style="font-weight:200;")
				div.chapter(v-for="(data,n) in dat", v-bind:id="n", v-bind:key="n", xmlns:aid="http://ns.adobe.com/AdobeInDesign/4.0/", xmlns:aid5="http://ns.adobe.com/AdobeInDesign/5.0/")

					include includes/datatemplate.pug